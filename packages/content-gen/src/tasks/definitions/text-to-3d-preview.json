{
  "type": "text-to-3d-preview",
  "name": "Text to 3D Preview",
  "description": "Generate a 3D model preview from text description (no textures)",
  "apiVersion": "v2",
  "endpoint": "text-to-3d",
  "method": "POST",
  "inputs": [
    {
      "name": "mode",
      "type": "string",
      "required": true,
      "value": "preview",
      "description": "Fixed to 'preview' for this task"
    },
    {
      "name": "prompt",
      "type": "string",
      "required": true,
      "maxLength": 600,
      "description": "Text description of the 3D model to generate"
    },
    {
      "name": "negative_prompt",
      "type": "string",
      "required": false,
      "default": "low quality, blurry, distorted",
      "maxLength": 600,
      "description": "What to avoid in generation"
    },
    {
      "name": "art_style",
      "type": "string",
      "required": false,
      "default": "sculpture",
      "enum": ["realistic", "sculpture"],
      "description": "Art style: 'realistic' or 'sculpture' (NOT 'pbr' or 'cartoon')"
    },
    {
      "name": "ai_model",
      "type": "string",
      "required": false,
      "default": "meshy-4",
      "description": "AI model version to use"
    },
    {
      "name": "topology",
      "type": "string",
      "required": false,
      "default": "quad",
      "enum": ["quad", "triangle"],
      "description": "Mesh topology"
    },
    {
      "name": "target_polycount",
      "type": "number",
      "required": false,
      "default": 5000,
      "min": 100,
      "max": 300000,
      "description": "Target polygon count for the model"
    },
    {
      "name": "should_remesh",
      "type": "boolean",
      "required": false,
      "default": true,
      "description": "Enable remeshing for cleaner topology"
    },
    {
      "name": "symmetry_mode",
      "type": "string",
      "required": false,
      "default": "auto",
      "enum": ["off", "auto", "on"],
      "description": "Symmetry mode for model generation"
    }
  ],
  "outputs": [
    {
      "name": "taskId",
      "responsePath": "$.id",
      "required": true
    },
    {
      "name": "previewModel",
      "responsePath": "$.model_urls.glb",
      "localFilename": "preview.glb",
      "required": true
    },
    {
      "name": "thumbnail",
      "responsePath": "$.thumbnail_url",
      "localFilename": "preview-thumbnail.png",
      "required": false
    }
  ],
  "streaming": {
    "endpoint": "text-to-3d/{taskId}/stream",
    "terminalStates": ["SUCCEEDED", "FAILED", "CANCELED"]
  }
}
