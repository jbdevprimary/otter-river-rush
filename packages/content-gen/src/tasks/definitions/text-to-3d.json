{
  "type": "text-to-3d",
  "name": "Text to 3D Model",
  "apiVersion": "v2",
  "endpoint": "text-to-3d",
  "inputs": [
    {
      "name": "mode",
      "type": "string",
      "required": true,
      "default": "preview",
      "description": "Generation mode: 'preview' for fast low-poly, 'refine' for high quality"
    },
    {
      "name": "prompt",
      "type": "string",
      "required": true,
      "description": "Text description of the 3D model to generate"
    },
    {
      "name": "negative_prompt",
      "type": "string",
      "required": false,
      "default": "low quality, blurry, distorted",
      "description": "What to avoid in generation"
    },
    {
      "name": "art_style",
      "type": "string",
      "required": false,
      "default": "sculpture",
      "description": "Art style: pbr, realistic, sculpture"
    },
    {
      "name": "ai_model",
      "type": "string",
      "required": false,
      "default": "meshy-4",
      "description": "AI model version to use"
    },
    {
      "name": "topology",
      "type": "string",
      "required": false,
      "default": "quad",
      "description": "Mesh topology: quad or triangle"
    },
    {
      "name": "target_polycount",
      "type": "number",
      "required": false,
      "default": 30000,
      "description": "Target polygon count for the model"
    }
  ],
  "outputs": [
    {
      "name": "glb",
      "responsePath": "model_urls.glb",
      "localFilename": "model.glb",
      "required": true
    },
    {
      "name": "thumbnail",
      "responsePath": "thumbnail_url",
      "localFilename": "thumbnail.png",
      "required": false
    }
  ]
}
