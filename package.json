{
  "name": "otter-river-rush-monorepo",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "description": "Otter River Rush - A React Three Fiber endless runner game",
  "author": "jbcom",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arcade-cabinet/otter-river-rush.git"
  },
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter @otter-river-rush/web dev",
    "dev:legacy": "pnpm --filter client dev",
    "build": "pnpm -r --filter '@otter-river-rush/*' --filter '!@otter-river-rush/client' --filter '!@otter-river-rush/dev-tools' build && pnpm --filter @otter-river-rush/web build",
    "build:legacy": "pnpm --filter client build",
    "preview": "pnpm --filter @otter-river-rush/web preview",
    "test": "pnpm --filter client test",
    "test:e2e": "pnpm --filter client test:e2e",
    "lint": "biome check .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "type-check": "pnpm -r typecheck",
    "generate:models": "pnpm --filter dev-tools tsx src/generators/meshy-models.ts",
    "generate:animations": "pnpm --filter dev-tools tsx src/generators/otter-animations.ts",
    "generate:textures": "pnpm --filter dev-tools generate:textures",
    "generate:sprites": "pnpm --filter dev-tools generate:sprites",
    "pipeline": "pnpm --filter dev-tools pipeline",
    "quality-check": "pnpm --filter dev-tools quality-check",
    "verify": "pnpm lint && pnpm type-check"
  },
  "build": {
    "appId": "com.ottergames.riverrush",
    "productName": "Otter River Rush",
    "directories": {
      "output": "dist-electron",
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "wrappers/electron/**/*",
      "!wrappers/electron/*.ts"
    ],
    "extraMetadata": {
      "main": "wrappers/electron/main.js"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.games",
      "icon": "public/pwa-512x512.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/pwa-512x512.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Game",
      "icon": "public/pwa-512x512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@ai-sdk/anthropic": "^2.0.38",
    "@ai-sdk/openai": "^2.0.56",
    "@biomejs/biome": "^2.3.11",
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/ios": "^7.4.4",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/howler": "^2.2.12",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/three": "^0.181.0",
    "@vitest/coverage-v8": "^4.0.4",
    "@vitest/ui": "^4.0.4",
    "ai": "^5.0.81",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "daisyui": "^5.3.10",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "jsdom": "^27.0.1",
    "openai": "^6.7.0",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "undici": "^7.18.2",
    "vite": "^7.1.12",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^1.1.0",
    "vitest": "^4.0.4",
    "wait-on": "^9.0.1",
    "workbox-window": "^7.3.0"
  }
}
